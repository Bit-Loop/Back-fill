# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# Polygon S3 Flat Files (optional, for bulk downloads)
POLYGON_S3_ACCESS_KEY=your_s3_access_key_here
POLYGON_S3_SECRET_KEY=your_s3_secret_key_here
POLYGON_S3_ENDPOINT=https://files.polygon.io
POLYGON_S3_BUCKET=flatfiles

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD=

# TimescaleDB/PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=chronox
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Alternative TimescaleDB environment variable names (same as above)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=chronox
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=your_db_password_here

# Scraper Daemon Configuration
SCRAPER_HOST=127.0.0.1
SCRAPER_PORT=9000

# Logging Configuration
LOG_DIR=./logs
LOG_LEVEL=INFO

# Debug Mode
DEBUG_CPU=false
